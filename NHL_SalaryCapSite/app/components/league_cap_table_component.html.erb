<div data-controller="league-cap-table">
  <h2>League Cap Table</h2>
  <table class="table-auto w-full">
    <thead>
      <tr>
        <th class="text-center">Team</th>
        <th class="text-center">Cap Hit</th>
        <th class="text-center">Cap Space</th>
      </tr>
    </thead>
    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td class="w-72 border-b border-gray-300">
            <%= render(LinkComponent.new(href: team_path( code: team.code))) do %>
              <div class="flex items-center">
                <%= image_tag "logos/#{team.name.downcase.parameterize}.gif", class: "h-8 mr-2" %>
                <span><%= team.name %></span>
            </div>
          <% end %>
          </td>
          <td class= "px-2"><%= formatted_cap_hit(total_cap_hit(team)) %></td>
          <td class= "px-2 <%= cap_space_text_color(cap_space(team))%>"><%= formatted_cap_hit(cap_space(team)) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
