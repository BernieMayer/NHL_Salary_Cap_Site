<p class="px-4"> Contract start: <%= @contract_details.first.season %> &emsp;
Contract end: <%= @contract_details.last.season %> </p>
<h2 class="px-4"> Expiry status: <%= @contract.expiry_status %> </h2>
<%= render_table do %>
  <%= table_head do %>
    <%= table_header "Contract Detail" %>
    <% @contract_details.each do |detail| %>
      <%= table_header detail.season %>
    <% end %>
  <% end %>
  
  <%= table_body do %>
    <%= table_row do %>
      <%= table_column "AAV" %>
      <% @contract_details.each do |detail| %>
        <%= table_column number_to_currency(detail.aav) %>
      <% end %>
    <% end %>

    <%= table_row do %>
      <%= table_column "Base Salary" %>
      <% @contract_details.each do |detail| %>
        <%= table_column number_to_currency(detail.base_salary) %>
      <% end %>
    <% end %>

    <%= table_row do %>
      <%= table_column "Cap Hit" %>
      <% @contract_details.each do |detail| %>
        <%= table_column number_to_currency(detail.cap_hit) %>
      <% end %>
    <% end %>

    <%= table_row do %>
      <%= table_column "Signing Bonus" %>
      <% @contract_details.each do |detail| %>
        <%= table_column number_to_currency(detail.signing_bonuses) %>
      <% end %>
    <% end %>

    <%= table_row do %>
      <%= table_column "Minors Salary" %>
      <% @contract_details.each do |detail| %>
        <%= table_column number_to_currency(detail.minors_salary) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>