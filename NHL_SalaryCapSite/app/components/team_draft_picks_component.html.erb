<table class="min-w-2 border-collapse text-sm">
  <thead>
    <tr>
      <th class="px-2 py-1 border-b border-r border-gray-300 text-left text-gray-700">Year</th>
      <% (1..7).each do |round| %>
        <th class="px-2 py-1 border-b border-gray-300 text-left text-gray-700">Round <%= round %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% (2025..2027).each do |year| %>
      <tr class="hover:bg-gray-50">
        <td class="px-2 py-1 border-b border-r border-gray-300 text-gray-900"><%= year %></td>
        <% (1..7).each do |round| %>
            <% draft_picks_count = @draft_picks_by_year_and_round.dig(year, round)&.size || 0 %>
            <td class="px-2 py-1 border-b border-gray-300 text-gray-900">
                <%= draft_picks_count %>
            </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
