<div class="player-search-component relative" data-controller="player-search">
  <input
    type="text"
    class="player-search-input p-2 border rounded-md w-full"
    placeholder="Search for a player..."
    id="player-search-input"
    data-player-search-target="input"
    data-action="input->player-search#search"
  />
  <ul
    class="player-search-list mt-2 bg-white shadow-lg rounded-md absolute w-full max-h-60 overflow-y-auto z-10"
    id="player-search-results"
    data-player-search-target="results"
  ></ul>
</div>
