<table class="table-auto w-full">
  <thead>
    <tr>
      <% @headers.each do |header| %>
        <th class="px-2 py-2 text-left"><%= header %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @rows.each do |row| %>
      <tr>
        <% row.each do |cell| %>
          <td class="border px-2 py-2"><%= cell %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
