<div class="container mt-4">
  <h1 class="text-center mb-4">NHL Trade Analyzer</h1>

  <%= form_tag trade_analyzer_path, method: :post do %>
    <div class="row">
      <!-- Team 1 Side -->
      <div class="col-md-5">
        <div class="card">
          <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">Team 1</h3>
          </div>
          <div class="card-body">
            <div class="form-group">
              <%= select_tag "team1", 
                  options_from_collection_for_select(Team.all, :id, :name),
                  class: "form-control",
                  prompt: "Select Team 1" %>
            </div>
            <!-- Placeholder for players selection (will be added with JavaScript later) -->
            <div id="team1-players" class="mt-3">
            </div>
          </div>
        </div>
      </div>

      <!-- Trade Direction Indicator -->
      <div class="col-md-2 d-flex align-items-center justify-content-center">
        <div class="trade-arrow text-center">
          <i class="fas fa-exchange-alt fa-3x"></i>
        </div>
      </div>

      <!-- Team 2 Side -->
      <div class="col-md-5">
        <div class="card">
          <div class="card-header bg-success text-white">
            <h3 class="card-title mb-0">Team 2</h3>
          </div>
          <div class="card-body">
            <div class="form-group">
              <%= select_tag "team2", 
                  options_from_collection_for_select(Team.all, :id, :name),
                  class: "form-control",
                  prompt: "Select Team 2" %>
            </div>
            <!-- Placeholder for players selection (will be added with JavaScript later) -->
            <div id="team2-players" class="mt-3">
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-12 text-center">
        <button type="submit" class="inline-flex items-center px-6 py-3 text-lg font-semibold text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
          </svg>
          Analyze Trade
        </button>
      </div>
    </div>
  <% end %>

  <!-- Results section (will be populated later) -->
  <div id="trade-analysis-results" class="mt-4">
  </div>
</div> 